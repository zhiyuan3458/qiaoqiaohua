/* components/order/order.wxss */
.barrage-row {
  width: auto;
  height: 120rpx;
  line-height: 120rpx;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-line-clamp: 1;
  white-space: nowrap;
}

.barrage-item:first-child {
  margin-left: 60rpx;
}

.barrage-item {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  margin-right: 120rpx;
  color: #333;
  padding: 9rpx 15rpx;
  border: 2rpx solid pink;
  border-radius: 10rpx;
  background: #F0DAD2;
  box-sizing: border-box;
  font-size: 25rpx;
  font-family: Arial, Helvetica, sans-serif;
  display: flex;
  align-items: center;
  box-shadow: 5rpx 5rpx 3rpx pink;
}

.barrage-item .cartoon {
  max-width: 70rpx;
  height: auto;
  transform: translate(-98%, 8rpx);
  position: absolute;
  z-index: 0;
}

.barrage-item .content {
  white-space: nowrap;
  z-index: 1000;
}

.barrage-item .qipao {
  max-width: 70rpx;
  height: auto;
  right: -40rpx;
  position: absolute;
  z-index: 0;
}

@keyframes dmAnimation { 
  0% { transform: translateX(102%); }
  100% { transform: translateX(-140%); }
}